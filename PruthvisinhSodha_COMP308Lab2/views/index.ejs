<body>
  <div class="wrapper">
    <div class="container">
      <form action="/feedback" method="POST" class="form" name="loginForm" onsubmit="return validateForm()">
        <p>Username:</p>
        <input type="email" placeholder="Enter your email" name="username">
        <br>
        <p>Password :</p>
        <input type="password" name="password">
        <br><br>
        <input type="submit" value="Login" id="login-button">
      </form>
      <form action="/signup" method="POST" class="form" name="regForm">
        <input type="submit" value="Register" id="reg-button" style="color:black;">
      </form>
    </div>

  </div>
</body>

