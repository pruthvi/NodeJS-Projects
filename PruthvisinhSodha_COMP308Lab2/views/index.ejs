  <script>
    function validateForm() {
      var user = document.forms["loginForm"]["username"].value;
      var pass = document.forms["loginForm"]["password"].value;

      if (user == "") {
        alert("Enter USERNAME ");
        return false;
      }
      if (pass == "") {
        alert("Enter PASSWORD ");
        return false;
      }

    }
  </script>
